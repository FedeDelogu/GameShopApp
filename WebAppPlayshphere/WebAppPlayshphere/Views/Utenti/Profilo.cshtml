@using Utility
@using WebAppPlayshphere.Models
@model Utility.Entity
@{
    Layout = "_LayoutProfilo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Profilo/profilo.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/WebAppPlayshphere.styles.css" asp-append-version="true" />
    <title>Profilo</title>
</head>

<body class="vh-100" style="overflow-y:hidden">
    <section class="container py-4 px-5 rounded-bottom-5" id="datiUtente">
        <section id="anagrafica">
            <h3 class="text-center py-2 fs-1">ANAGRAFICA</h3>
            <h5 class="text-center py-1">Benvenuto <span class="fw-bold" style="color:var(--flame)"> @(((Utente)Model).Username)</span>! </h5>
            <form method="post" action="/Utenti/ModificaAnagrafica" onsubmit="ModificaAvvenuta()">
                <div class="row justify-content-center py-3 gy-3">
                    <div class="col-8 col-sm-5">
                        <div class="input-group mb-3">
                            <span class="input-group-text">Nome:</span>

                            <input type="text" class="form-control" name="Nome" value="@(((Utente)Model).Anagrafica.Nome)">

                          
                        </div>
                    </div>
                    <div class="col-8 col-sm-5">
                        <div class="input-group mb-3">
                            <span class="input-group-text">Cognome:</span>

                            <input type="text" class="form-control" name="Cognome" value="@(((Utente)Model).Anagrafica.Cognome)">

                        </div>
                    </div>
                    <div class="col-8 col-sm-5">
                        <div class="input-group mb-3">
                            <span class="input-group-text">Email:</span>

                            <input type="email" class="form-control rounded-end-2" name="Email" value="@(((Utente)Model).Email)">

                        </div>
                    </div>
                    <div class="col-8 col-sm-5">
                        <div class="input-group mb-3">
                            <span class="input-group-text">Indirizzo:</span>

                            <input type="text" class="form-control" name="Indirizzo" value="@(((Utente)Model).Anagrafica.Indirizzo)">


                        </div>
                    </div>
                    <div class="col-8 col-sm-5">
                        <div class="input-group mb-3">
                            <span class="input-group-text">CAP:</span>

                            <input type="number" class="form-control rounded-end-2" name="Cap" value="@(((Utente)Model).Anagrafica.Cap)">


                        </div>
                    </div>
                    <div class="col-8 col-sm-5">
                        <div class="input-group mb-3">

                            <span class="input-group-text">Città :</span>
                            <input type="text" class="form-control" name="Citta" value="@(((Utente)Model).Anagrafica.Citta)">

                            

                        </div>
                    </div>
                    <div class="col-8 col-sm-5">
                        <div class="input-group mb-3">
                            <span class="input-group-text">Paese:</span>

                            <input type="text" class="form-control" name="Stato" value="@(((Utente)Model).Anagrafica.Stato)">

                        </div>
                    </div>
                    <div class="col-8 col-sm-5">
                        <div class="input-group mb-3">
                            <span class="input-group-text">Cell:</span>

                            <input type="number" class="form-control rounded-end-2" name="Telefono" value="@(((Utente)Model).Anagrafica.Telefono)">
                        </div>

                    </div>
                    
                    <div class="col-12 text-center">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modifica">Modifica</button>
                    </div>
                </div>
            <div class="modal fade" id="modifica" tabindex="-1" aria-labelledby="modificaLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content" style="background-color:var(--black-olive); color:var(--floral-white);">
                        <div class="modal-header">
                            <h1 class="modal-title" id="modificaLabel"></h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            I dati verranno modificati definitivamente sei sicuro di continuare?
                        </div>
                        <div class="modal-footer d-flex justify-content-end">
                                <button type="submit" class="btn me-4 btn-success" id="success">Salva</button>
                                <button type="button" class="btn btn-danger" id="danger" data-bs-dismiss="modal">Chiudi</button>
                        </div>
                    </div>
                </div>
            </div>
            </form>
        </section>
        </section>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/5101093cd6.js" crossorigin="anonymous"></script>
</body>

</html>