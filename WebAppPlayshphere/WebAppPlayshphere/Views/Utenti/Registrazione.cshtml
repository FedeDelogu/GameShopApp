
@using Utility
@using WebAppPlayshphere.Models
@model List<Utility.Entity>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Login/Login.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout/mainLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppPlayshphere.styles.css" asp-append-version="true" />
    <title>Registrazione</title>
</head>

<body style="overflow-y:hidden">
    <div class="container mb-3">
        <div class="d-flex justify-content-between">
            <section id="login" class="d-flex flex-column align-items-center justify-content-center">
                <h2 class=" text-white">Registrazione</h2>
                <form class="row justify-content-center my-5" method="post" action="/Utenti/Salva">
                    <div class="mb-3 col-6">
                        <input type="email" class="form-control email-password" id="email" name="Email" placeholder="Email" required>
                    </div>
                    <div class="mb-3 col-6">
                        <input type="password" class="form-control email-password" id="password" name="Password" placeholder="Password" required>
                    </div>
                   
                    <div class="mb-3 col-6">
                        <input type="text" class="form-control email-password" id="nome" name="Nome" placeholder="Nome" required>
                    </div>
                    <div class="mb-3 col-6">
                        <input type="text" class="form-control email-password" id="cognome" name="Cognome" placeholder="Cognome" required>
                    </div>
                    <div class="mb-3 col-6">
                        <input type="text" class="form-control email-password" id="stato" name="Stato" placeholder="Paese" required>
                    </div>
                    <div class="mb-3 col-6">
                        <input type="date" class="form-control email-password" id="dob" name="Dob" required>
                    </div>
                    <div class="mb-3 col-12 form-check">
                        <input type="checkbox" class="form-check-input" id="policy">
                        <label class="form-check-label text-white">Accetto i <a href="/Home/Termini">Termini</a> e le <a href="/Home/Privacy">Privacy policy</a></label>
                    </div>
                    <button type="submit" class="btn btn-login col-8 fw-bold rounded-3 my-4">Registrati</button>
                </form>
                <a class="arrow-back d-flex align-items-center fs-4" id="register-manual" href="/Utenti/Login">Â« Torna alla Login</a>
            </section>

            <section>
                <div class="wallpaper"></div>
            </section>
        </div>
    </div>
    </body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</html>