<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Registrazione</title>
</head>
<body>
    <!-- HEADER -->
    <header class="p-4 sticky-top">
        <div class="container d-flex p-2 justify-content-between align-items-center justify-items-center rounded-5" id="container-navbar">
            <nav class="navbar">
                <div class="container">
                    <a class="navbar-brand" href="#">
                        <img src="img/HellsGames.png" alt="Logo" width="64" height="64">
                    </a>
                </div>
            </nav>
            <nav class="navbar">
                <ul class="nav nav-underline">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Chi siamo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Trending</a>
                    </li>
                    <li class="nav-item">
                        <form class="d-flex" role="search">
                            <input class="form-control form-control-sm rounded-end-0 border-0" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-light rounded-start-0 border-0" type="submit">
                                <i class="fa-solid fa-search fs-4" style="color:#403d39ff;"></i>
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>
            <nav class="navbar" id="profile-box">
                <ul class="nav nav-underline">
                    <li class="nav-item">
                        <i class="fa-solid fa-user fs-3" style="color:#eb5e28ff;"></i>
                    </li>
                    <li class="nav-item">
                        <i class="fa-solid fa-cart-shopping fs-3" style="color:#eb5e28ff;"></i>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- FINE HEADER -->

    <main class="container mb-3">
        <div class="d-flex justify-content-between">
            <section id="login" class="d-flex flex-column align-items-center justify-content-center">
                <h2 class="text-white">Registrazione</h2>
                <form action="/Utenti/Salva" method="post" class="row justify-content-center my-3">
                    <div class="mb-3 col-6">
                        <input type="text" class="form-control email-password" id="nome" name="nome" placeholder="Username" required>
                    </div>
                    <div class="mb-3 col-6">
                        <input type="password" class="form-control email-password" id="password" name="password" placeholder="Password" required>
                    </div>
                    <div class="mb-3 col-6">
                        <input type="email" class="form-control email-password" id="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="mb-3 col-6">
                        <input type="text" class="form-control email-password" id="cognome" name="cognome" placeholder="Cognome" required>
                    </div>
                    <div class="mb-3 col-6">
                        <input type="date" class="form-control email-password" id="dob" name="dob" required>
                    </div>
                    <div class="mb-3 col-12 form-check">
                        <input type="checkbox" class="form-check-input" id="policy" name="policy" required>
                        <label class="form-check-label text-white" for="policy">I agree with the Terms and Privacy policy</label>
                    </div>
                    <button type="submit" class="btn btn-login col-8 fw-bold">Registrati</button>
                </form>
            </section>

            <section>
                <div class="wallpaper"></div>
            </section>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/5101093cd6.js" crossorigin="anonymous"></script>
</body>
</html>
