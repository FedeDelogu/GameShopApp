@using Utility
@using WebAppPlayshphere.Models
@model List<Utility.Entity>
@* @{
    Layout = "_Layout";
}
 *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Login/Login.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout/mainLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppPlayshphere.styles.css" asp-append-version="true" />
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center align-content-center">
            <section id="login" class="d-flex flex-column align-items-center align-content-center justify-content-center">
                <h2 class=" text-white">Login</h2>
                <form class="row justify-content-center my-5">
                    <div class="mb-3 col-8">
                        <input type="email" class="form-control email-password" id="email" placeholder="Enter your email" required>
                        <div id="emailHelp" class="form-text text-white">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3 col-8">
                        <input type="password" class="form-control email-password" id="password" placeholder="********" required>
                    </div>
                    <div class="mb-3 col-8 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label text-white" for="rememberMe">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-login rounded-3 col-8 fw-bold">Login</button>
                </form>



                <div class="d-flex justify-content-between mt-3 w-75">
                    <a href="/Utenti/Registrazione">Registrati</a>
                    <a href="#" class="text-white">Forgot password?</a>
                </div>
                <a class="arrow-back d-flex align-items-center fs-4 my-4" id="register-manual" href="/Home/Index">« Torna alla Home</a>

            </section>

            <section>
                <div class="wallpaper"></div>
            </section>
        </div>
    </div>
</body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</html>