
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>Login</title>
</head>
<body>
    <main class="container mb-3">
        <div class="d-flex justify-content-between">
            <section id="login" class="d-flex flex-column align-items-center justify-content-center">
                <h2 class=" text-white">Login</h2>
                <form class="row justify-content-center my-3" method="POST" action="/Utenti/Accedi">

                    <div class="mb-3 col-8">
                        <input type="text" class="form-control username-password" name="username" id="username" placeholder="Enter your email" required>
                        <div id="emailHelp" class="form-text text-white">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3 col-8">
                        <input type="password" class="form-control email-password" name="password" id="password" placeholder="********" required>
                    </div>
                    <div class="mb-3 col-8 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label text-white" for="rememberMe">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-login col-8 fw-bold">Login</button>
                </form>

                <div class="text-center mt-3 row justify-content-center">
                    <p class="text-white col-12">Or login with</p>
                    <button class="btn btn-primary col-2 mx-1 mb-2">
                        <i class="fab fa-facebook-f"></i>
                    </button>
                    <button class="btn btn-danger col-2 mx-1 mb-2">
                        <i class="fab fa-google"></i>
                    </button>
                    <button class="btn btn-dark col-2 mx-1 mb-2">
                        <i class="fab fa-apple"></i>
                    </button>
                    <button class="btn btn-info col-2 mx-1 mb-2">
                        <i class="fab fa-discord"></i>
                    </button>
                </div>

                <div class="d-flex justify-content-between mt-3 w-75">
                    <a href="/Utenti/Registrazione">Registrati</a>
                    <a href="#" class="text-white">Forgot password?</a>
                </div>
            </section>

            <section>
                <div class="wallpaper"></div>
            </section>
        </div>
    </main>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/5101093cd6.js" crossorigin="anonymous"></script>

</body>
</html>