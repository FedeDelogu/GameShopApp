@using WebAppPlayshphere.DAO
@model Dictionary<WebAppPlayshphere.Models.Utente, List<WebAppPlayshphere.Models.Ordine>>
@{
    Layout = "_LayoutProfilo";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Profilo/recensioni.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout/mainLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppPlayshphere.styles.css" asp-append-version="true" />
    <title>Le tue Recensioni</title>
</head>
<body class="vh-100" style="overflow-y:hidden">
        <section class="container py-4 px-5 rounded-bottom-5" id="storicoAcquisti">
        <h3 class="text-center py-2 fs-1" style="color:var(--floral-white)">I TUOI ACQUISTI</h3>
        @foreach (var kvp in Model)
        {
            <h5 class="text-center py-1">
                    Benvenuto <span class="fw-bold" style="color:var(--flame)">@kvp.Key.Username</span>!
            </h5>

            @if (kvp.Value != null && kvp.Value.Any())
            {
                <div class="row gy-3">
                    @foreach (var ordine in kvp.Value)
                    {
                        <div class="col-md-4">
                                <div class="card rounded-4 text-white bg-dark h-100">
                                <div class="card-body">
                                        <h5 class="fw-bold" style="color:var(--flame)">
                                        ID Ordine: @ordine.Id
                                    </h5>
                                    <div class="fw-bold">
                                        <div class="card-text">
                                            Data dell'ordine: @ordine.DataOrdine.ToString("dd/MM/yyyy")
                                        </div>
                                        <div class="card-text">
                                            Stato dell'ordine: @ordine.Stato
                                        </div>
                                    </div>
                                    <p class="card-text">
                                                Giochi acquistati:
                                                <ul class="py-1">
                                                    @{
                                                        foreach(var v in ordine.Videogiochi.Keys)
                                                        {
                                                            <li>- @v.Titolo</li>
                                                        }
                                                    }
                                                </ul>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-center mt-3">Non hai ordini.</p>
            }
        }
    </section>
</body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</html>