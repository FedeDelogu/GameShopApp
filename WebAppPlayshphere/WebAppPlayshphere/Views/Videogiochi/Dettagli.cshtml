@using WebAppPlayshphere.Models
@model Utility.Entity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Videogiochi/dettagli.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>@(((Videogioco)Model).Titolo)</title>
</head>
<body>
    <div id="full-img">
    </div>
    <header class="p-4 sticky-top">
        <div class="container d-flex p-2 justify-content-between align-items-center justify-items-center" id="container-navbar">
            <nav class="navbar">
                <div class="container">
                    <a class="navbar-brand" href="#">
                        <img src="https://fakeimg.pl/150x150/eb5e28/ffffff?text=LOGO" alt="Bootstrap" width="64" height="64">
                    </a>
                </div>
            </nav>
            <nav class="navbar">
                <ul class="nav nav-underline">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Chi siamo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Trending</a>
                    </li>
                    <li class="nav-item">
                        <form class="d-flex" role="search">
                            <input class="form-control form-control-sm rounded-end-0 border-0" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-light rounded-start-0 border-0" type="submit">
                                <i class="fa-solid fa-search fs-4" style="color:#403d39ff;"></i>
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>
            <nav class="navbar" id="profile-box">
                <ul class="nav nav-underline">
                    <li class="nav-item">
                        <i class="fa-solid fa-user fs-3" style="color:#eb5e28ff;"></i>
                    </li>
                    <li class="nav-item">
                        <i class="fa-solid fa-cart-shopping fs-3" style="color:#eb5e28ff;"></i>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <main>
        <div class="container" id="riepilogo-videogioco">
            <div class="container d-flex justify-content-between">
                <div id="carouselExampleIndicators  rounded-5" class="carousel slide">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://gaming-cdn.com/images/products/5376/screenshot/s-t-a-l-k-e-r-2-heart-of-chornobyl-pc-game-steam-europe-wallpaper-1.jpg?v=1732113803" width="1024" height="300" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://gaming-cdn.com/images/products/5376/screenshot/s-t-a-l-k-e-r-2-heart-of-chornobyl-pc-game-steam-europe-wallpaper-2.jpg?v=1732113803" width="1024" height="300" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://gaming-cdn.com/images/products/5376/screenshot/s-t-a-l-k-e-r-2-heart-of-chornobyl-pc-game-steam-europe-wallpaper-3.jpg?v=1732113803" width="1024" height="300" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="container pb-3" id="dettagli-gioco">
                    <div class="container-fluid mt-3 rounded-5">
                        <a id="return-catalog">< Torna al catalogo</a>
                        <h1>@(((Videogioco)Model).Titolo)</h1>
                    </div>
                    <div class="container-fluid d-flex flex-column mt-3" id="container-piattaforma">
                        <label for="piattaforma">Scegli piattaforma</label>
                        <select name="" id="piattaforma">
                            <option value="">PC</option>
                            <option value="">Playstation</option>
                            <option value="">Xbox</option>
                            <option value="">Nintendo</option>
                        </select>
                    </div>
                    <div class="container-fluid mt-3">
                        <p>Disponibilità: <span id="stock">Disponibile</span></p>
                    </div>
                    <div class="container-fluid mt-3">
                        <div class="d-flex flex-row align-items-center">
                            <span id="price">@(((Videogioco)Model).Prezzo)</span>
                            <input type="number" id="quantita" value="1" min="0">
                        </div>
                    </div>
                    <div class="container-fluid mt-3">
                        <div class="d-flex flex-row align-items-center d-flex justify-content-between">
                            <input type="button" class="btn btn-primary p-2" id="wishlist" value="Wishlist">
                            <input type="button" class="btn btn-primary p-2" id="carrello" value="Aggiungi al carrello">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-3 mb-3">
            <h2>Descrizione</h2>
            <p>@(((Videogioco)Model).Descrizione)</p>
        </div>
        <p id="idvideogioco" >@(((Videogioco)Model).Id)</p>
        <!--  VA INSERITO NEL DB IL LINK DI YT -->
        <div class="container mt-3 mb-3">
            <h2>Trailer</h2>
            <iframe width="100%" height="600" src="https://www.youtube.com/embed/PKO4PL8Xzik?si=qxywSRxdchQ_vEgL" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
        </div>
        <div class="container" id="recensioni">
            <!--  ELENCO DELLE RECENSIONI PER GIOCO -->
        </div>
    </main>
</body>

<!-- FOOTER -->
<footer>
    <div class="container">
        <div class="d-flex aling-items-center">
            <div class="container d-flex justify-content-sm-around align-items-center py-4" id="links-footer">
                <a>Home</a>
                <a>Regolamento</a>
                <a>FAQs</a>
                <a>Chi siamo</a>
            </div>
        </div>
        <div class="d-flex-align-items-center">
            <div class="container d-flex justify-content-sm-around align-items-center py-1">
                <span id="company">Pandemonium ©</span>
            </div>
        </div>
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/5101093cd6.js" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    // Funzione per caricare le recensioni
    async function getRecensioniGioco() {
        try {
            const idvideogioco = document.getElementById('idvideogioco').textContent;
            // Costruisci l'URL con l'ID del gioco come parametro
            const response = await fetch(`/Recensioni/RecensioniGioco?idvideogioco=${idvideogioco}`);
            if (!response.ok) {
                throw new Error('Errore nel recupero delle recensioni');
            }
            const htmlContent = await response.text();
            document.getElementById('recensioni').innerHTML = htmlContent;
        } catch (error) {
            console.error(error);
        }
    }

    // Esegui la funzione al caricamento della pagina
    window.onload = getRecensioniGioco;
</script>
</html>