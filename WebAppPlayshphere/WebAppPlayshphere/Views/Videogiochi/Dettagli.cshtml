@using WebAppPlayshphere.Models
@using WebAppPlayshphere.Controllers;
@model Utility.Entity
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Videogiochi/dettagli.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>@(((Videogioco)Model).Titolo)</title>
<style>
    #full-img{
     background-image: url("/images/copertine/@(Model.Id).png") !important;
     background-size: cover;
     background-attachment: fixed;
    }
</style>
</head>
<body>
    <div id="full-img">
    </div>
    
        <div class="container" id="riepilogo-videogioco">
            <div class="container d-flex justify-content-between">
                <div id="carouselExampleIndicators  rounded-5" class="carousel slide">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/images/copertine/@(Model.Id).png" width="1024" height="300" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/copertine/@(Model.Id).png" width="1024" height="300" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/copertine/@(Model.Id).png" width="1024" height="300" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="container pb-3" id="dettagli-gioco">
                    <div class="container-fluid mt-3 rounded-5">
                        <a id="return-catalog">< Torna al catalogo</a>
                        <h1>@(((Videogioco)Model).Titolo)</h1>
                    </div>
                    @{
                        List<Piattaforma> piattaforme = ((Videogioco)Model).Piattaforme;
                    }
                    <div class="container-fluid d-flex flex-column mt-3" id="container-piattaforma">
                        <label for="piattaforma">Scegli piattaforma</label>
                        <select name="" id="piattaforma">
                            @foreach (Piattaforma piattaforma in piattaforme)
                            {
                                <option value="@(piattaforma.Id)">@(piattaforma.Nome)</option>
                            }

                        </select>
                    </div>
                    <div class="container-fluid mt-3">
                        <p>Disponibilità: <span id="stock">Disponibile</span></p>
                    </div>
                    <div class="container-fluid mt-3">
                        <div class="d-flex flex-row align-items-center">
                            <span id="price">@(((Videogioco)Model).Prezzo) €</span>
                        </div>
                    </div>
                    <div class="container-fluid mt-3">
                        <div class="d-flex flex-row align-items-center d-flex justify-content-between">
                        <input type="button" class="btn btn-primary p-2" id="carrello" value="Aggiungi al carrello" onclick="aggiungiAlCarr(@(Model.Id), @(ViewBag.UtenteLoggato != null ? ViewBag.UtenteLoggato.Id : -1))">
                    </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-3 mb-3">
            <h2>Descrizione</h2>
            <p>@(((Videogioco)Model).Descrizione)</p>
        </div>
        <!--  VA INSERITO NEL DB IL LINK DI YT -->
        <div class="container mt-3 mb-3">
            <h2>Trailer</h2>
            <iframe width="100%" height="600" src="@(((Videogioco)Model).Link)" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
        </div>
        <div class="container" id="recensioni">
        </div>
   
</body>
<script>
    function aggiungiAlCarr(idVideogioco, idUtente) {
        var consoleSelezionata = parseInt(document.getElementById("piattaforma").value);
        var url = "";
        if (idUtente == -1) {
            url = "/Utenti/Login";
        } else {
            url = "/Videogiochi/AggiungiCarrello?idVid=" + idVideogioco + "&idUtente=" + idUtente + "&idPiattaforma=" + consoleSelezionata;
            alert("Videogioco aggiunto con successo!");
        }

        window.location.href = url;
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/5101093cd6.js" crossorigin="anonymous"></script>
</html>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/5101093cd6.js" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    // Funzione per caricare le recensioni
    async function getRecensioniGioco() {
        try {
            const idvideogioco = document.getElementById('idvideogioco').textContent;
            // Costruisci l'URL con l'ID del gioco come parametro
            const response = await fetch(`/Recensioni/RecensioniGioco?idvideogioco=${idvideogioco}`);
            if (!response.ok) {
                throw new Error('Errore nel recupero delle recensioni');
            }
            const htmlContent = await response.text();
            document.getElementById('recensioni').innerHTML = htmlContent;
        } catch (error) {
            console.error(error);
        }
    }

    // Esegui la funzione al caricamento della pagina
    window.onload = getRecensioniGioco;
</script>
</html>