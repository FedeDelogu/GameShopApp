<script>
    // Funzione per caricare le recensioni
    async function getRecensioniGioco() {
        try {
            const idvideogioco = document.getElementById('idvideogioco').textContent;
            // Costruisci l'URL con l'ID del gioco come parametro
            const response = await fetch(`/Recensioni/RecensioniGioco?idvideogioco=${idvideogioco}`);
            if (!response.ok) {
                throw new Error('Errore nel recupero delle recensioni');
            }
            const htmlContent = await response.text();
            document.getElementById('recensioni').innerHTML = htmlContent;
        } catch (error) {
            console.error(error);
        }
    }

    // Esegui la funzione al caricamento della pagina
    document.addEventListener('DOMContentLoaded', getRecensioniGioco);

    // Funzione per aggiungere il videogioco al carrello
    async function aggiungiAlCarr(idVideogioco) {
        // Ottieni l'ID utente in modo asincrono
        var idUtente = await getIdUtente();

        // Controlla quale console è stata selezionata
        var consoleSelezionata = parseInt(document.getElementById("piattaforma").value);

        var url = "";

        if (idUtente == null || idUtente == undefined) {
            // Se l'utente non è loggato, redirigi alla pagina di login
            url = "/Utenti/Login";
            window.location.href = url; // Reindirizza subito
            return; // Interrompe l'esecuzione della funzione
        } else {
            // Costruisci l'URL per aggiungere il gioco al carrello
            url = "/Videogiochi/AggiungiCarrello?idVid=" + idVideogioco + "&idUtente=" + idUtente + "&idPiattaforma=" + consoleSelezionata;

            // Reindirizza per aggiungere al carrello e poi apri il modale
            var modalElement = new bootstrap.Modal(document.getElementById("modalAddCart"));
            modalElement.show();

            document.getElementById("redirectToDetail").addEventListener("click", function () {
                window.location.href = url; // Ricarica la pagina corrente
            });
        }
    }

async function getIdUtente() {
    try {
        const response = await fetch(`/Utenti/GetIdUtenteLoggato`);
        
        // Controlla se la risposta è OK
        if (!response.ok) {
            throw new Error('Errore nel recupero dell\'utente: ' + response.status);
        }

        // Verifica se la risposta è JSON
        const contentType = response.headers.get("Content-Type");
        if (!contentType || !contentType.includes("application/json")) {
            throw new Error("La risposta non è in formato JSON");
        }

        // Ottieni la risposta come JSON
        const user = await response.json();
        
        console.log("Risposta dell'API:", user);  // Stampa l'intero oggetto per il debug

        if (user != undefined) {
            console.log("ID Utente loggato:", user["id"]);
            return user["id"];  // Restituisci l'ID se esiste
        } else {
            console.error("ID utente mancante nella risposta.");
            return null;  // Se non c'è ID, ritorna null
        }
    } catch (error) {
        console.error("Errore:", error);
    }
}


