<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppPlayshphere</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout/mainLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppPlayshphere.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        // Controllo se c'è un utente loggato
        var utenteLoggatoJson = Context.Session.GetString("UtenteLoggato");
        dynamic utenteLoggato = string.IsNullOrEmpty(utenteLoggatoJson) ? null : Newtonsoft.Json.JsonConvert.DeserializeObject(utenteLoggatoJson);
    }

    <header class="p-4 sticky-top" id="menu">
        <div class="container d-flex p-2 justify-content-between align-items-center justify-items-center rounded-5" id="container-navbar">
            <nav class="navbar">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="/img/HellsGames.png" alt="Bootstrap" width="64" height="64">
                    </a>
                </div>
            </nav>
            <nav class="navbar">
                <ul class="nav nav-underline">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Videogiochi" asp-action="Catalogo">Catalogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Ordini" asp-action="Elenco">Elenco Ordini</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Chi siamo</a>
                    </li>
                    <li class="nav-item">
                        <form class="d-flex" role="search">
                            <input class="form-control form-control-sm border-0 rounded-start-2" type="search" placeholder="Cerca un videogioco" aria-label="Search">
                            <button class="btn btn-outline-light border-0" type="submit">
                                <i class="fa-solid fa-search fs-4" style="color:#403d39ff;"></i>
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>
            <nav class="navbar" id="profile-box">
                <ul class="nav nav-underline">
                    @if (utenteLoggato != null)
                    {
                        if (utenteLoggato.Ruolo == 0) // Admin
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Gestione Admin</a>
                            </li>
                        }
                        else // Utente loggato
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Utenti" asp-action="Profilo"><i class="fa-solid fa-user fs-3 px-2" style="color:#eb5e28ff;"></i> @utenteLoggato.Username</a>
                            </li>
                            <li class="nav-item">
                                @{
                                    int idUser = @utenteLoggato.Id;
                                    <i class="fa-solid fa-cart-shopping fs-3" style="color:#eb5e28ff;" onclick="window.location.href='/Carrelli/Dettagli?id=@(idUser)'"></i>
                                }
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Utenti" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Utenti" asp-action="Login"><i class="fa-solid fa-user fs-3 px-2" style="color:#eb5e28ff;"></i> Login</a>
                        </li>
                        <li class="nav-item">
                            <i class="fa-solid fa-cart-shopping fs-3" style="color:#eb5e28ff;"></i>
                         </li>

                    }
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="d-flex aling-items-center">
                <div class="container d-flex justify-content-sm-around align-items-center py-4" id="links-footer">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <a>Regolamento</a>
                    <a>FAQs</a>
                    <a>Chi siamo</a>
                </div>
            </div>
            <div class="d-flex-align-items-center">
                <div class="container d-flex justify-content-sm-around align-items-center py-1">
                    <span id="company">Pandemonium ©</span>
                </div>
            </div>
        </div>
    </footer>
</body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/5101093cd6.js" crossorigin="anonymous"></script>

</html>
